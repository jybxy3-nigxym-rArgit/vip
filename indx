                type: "stc"
            },
            {
                number: "0541333316",
                price: 1900,
                carrier: "STC",
                seller: "أبو جود",
                city: "الخبر",
                type: "stc"
            },
            {
                number: "0535353958",
                price: 1200,
                carrier: "STC",
                seller: "أبو جود",
                city: "الخبر",
                type: "stc"
            },
            {
                number: "0563333254",
                price: 1500,
                carrier: "STC",
                seller: "أبو جود",
                city: "الخبر",
                type: "stc"
            }
        ];

        let filteredNumbers = [...numbersData];

        function renderNumbers(numbers) {
            const grid = document.getElementById('numbersGrid');
            grid.innerHTML = '';

            numbers.forEach(number => {
                const card = document.createElement('div');
                card.className = 'number-card';
                card.innerHTML = `
                    <div class="number-display">${number.number}</div>
                    <div class="number-info">
                        <div class="price">${number.price} ريال</div>
                        <div class="carrier">${number.carrier}</div>
                    </div>
                    <div class="seller-info">
                        <div class="seller-name">${number.seller}</div>
                        <div class="city">${number.city}</div>
                        <button class="contact-btn" onclick="contactSeller('${number.seller}')">تواصل مع البائع</button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function filterNumbers() {
            const carrier = document.getElementById('carrier').value;
            const city = document.getElementById('city').value;
            const priceFrom = parseFloat(document.getElementById('priceFrom').value) || 0;
            const priceTo = parseFloat(document.getElementById('priceTo').value) || Infinity;
            const numberSearch = document.getElementById('numberSearch').value;

            filteredNumbers = numbersData.filter(number => {
                const matchesCarrier = !carrier || number.type === carrier;
                const matchesCity = !city || number.city.includes(getCityName(city));
                const matchesPrice = number.price >= priceFrom && number.price <= priceTo;
                const matchesNumber = !numberSearch || number.number.includes(numberSearch);

                return matchesCarrier && matchesCity && matchesPrice && matchesNumber;
            });

            renderNumbers(filteredNumbers);
        }

        function getCityName(cityCode) {
            const cities = {
                'riyadh': 'الرياض',
                'jeddah': 'جدة',
                'dammam': 'الدمام',
                'mecca': 'مكة',
                'medina': 'المدينة'
            };
            return cities[cityCode] || cityCode;
        }

        function contactSeller(sellerName) {
            alert(`سيتم توصيلك بـ ${sellerName} قريباً`);
        }

        // Initialize
        renderNumbers(numbersData);
    </script>
